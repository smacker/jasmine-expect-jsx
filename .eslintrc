{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-uses-react": 1
  },
  "plugins": ["react"]
}
